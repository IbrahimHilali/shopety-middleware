generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Payment {
  id     Int     @id @default(autoincrement())
  type   String  @unique
  active Boolean
  config String
}
model User {
  id       String     @id @default(cuid())
  email    String     @unique
  password String
  roles    UserRole[]

  RefreshToken RefreshToken[]
}

model UserRole {
  id     String @id @default(cuid())
  name   String
  userId String
  user   User   @relation(fields: [userId], references: [id])
}

model RefreshToken {
  id            String    @id @default(cuid())
  // Hash of the raw refresh token (argon2)
  tokenHash     String    @unique
  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  // For rotation / reuse detection
  jti           String    @unique
  parentId      String? // previous token id (optional)
  replacedById  String? // new token id (optional)
  revokedAt     DateTime?
  revokedReason String?
  expiresAt     DateTime
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([userId])
  @@index([expiresAt])
}
